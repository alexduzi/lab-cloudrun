    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/api",
            "env": {
                "PORT": "8080",
                "GIN_MODE": "debug",
                "VIA_CEP_BASE_URL": "https://viacep.com.br/ws/{cep}/json/",
                "WEATHER_BASE_URL": "http://api.weatherapi.com/v1/current.json"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": []
        },
        {
            "name": "Launch Current File",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}"
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        },
        {
            "name": "Debug Tests in Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}"
        },
        {
            "name": "Debug Tests in Current Package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}"
        }
    ]
}